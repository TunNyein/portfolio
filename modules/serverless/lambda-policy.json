{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"dynamodb:UpdateItem",
				"dynamodb:GetItem",
				"dynamodb:PutItem"
			],
			"Resource": "arn:aws:dynamodb:*:*:table/visitor-counter"
		},
		{
			"Effect": "Allow",
			"Action": [
				"cloudwatch:PutMetricData"
			],
			"Resource": "*"
		}
	]
}